<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="348.0" prefWidth="346.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coffee_management_system.controller.PromotionEditorController">
   <children>
          <VBox layoutX="20.0" prefHeight="336.0" prefWidth="330.0" AnchorPane.leftAnchor="10.0">
              <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="330.0">
                      <children>
                          <Label prefHeight="18.0" prefWidth="100.0" text="Tên">
                              <HBox.margin>
                                  <Insets />
                              </HBox.margin>
                          </Label>
                          <TextField fx:id="txtPromotionName" prefHeight="26.0" prefWidth="220.0" promptText="Tên chương trình khuyến mãi">
                              <HBox.margin>
                                  <Insets bottom="10.0" top="10.0" />
                              </HBox.margin>
                          </TextField>
                      </children>
                      <VBox.margin>
                          <Insets />
                      </VBox.margin>
                  </HBox>
                  <HBox prefHeight="117.0" prefWidth="330.0">
                      <children>
                          <Label prefHeight="18.0" prefWidth="100.0" text="Mô tả">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextArea fx:id="txtPromotionDescription" prefHeight="100.0" prefWidth="220.0" promptText="Mô tả chương trình khuyến mãi" />
                      </children>
                      <VBox.margin>
                          <Insets bottom="10.0" />
                      </VBox.margin>
                  </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="500.0">
               <children>
                          <Label prefHeight="18.0" prefWidth="100.0" text="Chiết khấu">
                              <HBox.margin>
                                  <Insets />
                              </HBox.margin>
                          </Label>
                  <TextField fx:id="txtPromotionDiscount" prefHeight="26.0" prefWidth="220.0" promptText="Số chiết khấu" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="100.0" text="Ngày bắt đầu">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="txtPromotionStartDate" editable="false" prefHeight="26.0" prefWidth="220.0" promptText="Chọn ngày bắt đầu" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="56.0" prefHeight="42.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="100.0" text="Ngày kết thúc">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="txtPromotionEndDate" editable="false" prefHeight="26.0" prefWidth="220.0" promptText="Chọn ngày kết thúc" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="44.0" prefWidth="500.0">
               <children>
                         <JFXButton fx:id="btnAddNew" onAction="#onEditButtonClick" prefHeight="30.0" prefWidth="100.0" styleClass="bg-blue" text="Cập nhật" textFill="WHITE">
                             <font>
                                 <Font size="14.0" />
                             </font>
                         </JFXButton>
                         <JFXButton fx:id="btnCancel" onAction="#onCancelButtonClick" prefHeight="30.0" prefWidth="100.0" styleClass="bg-red" text="Hủy" textFill="WHITE">
                             <font>
                                 <Font size="14.0" />
                             </font>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                         </JFXButton>
                     </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
              </children>
          </VBox>
   </children>
</AnchorPane>
